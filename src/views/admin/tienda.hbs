<div class="container p-4">
  <div class="row">
    <div class="col-md-12 mx-auto">
      <div class="card text-center">
        <div class="card-header ">
          <h3>Tienda</h3>
        </div>
        <div class="card-body">
            <h4>Información Fiscal:</h4>
                    <form action="/admin/editar_tienda" method="POST">
                        <div class="form-group">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon3">Nombre: </span>
                                </div>
                                <input type="text" class="form-control" name="nombre" value="{{tienda.nombre}}" aria-describedby="basic-addon3">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon3">Nombre Fiscal: </span>
                                </div>
                                <input type="text" class="form-control" name="nombre_fiscal" value="{{tienda.nombre_fiscal}}" aria-describedby="basic-addon3">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon3">CIF/DNI: </span>
                                </div>
                                <input type="text" step=".01" class="form-control" value="{{tienda.cif_dni}}" name="cif_dni" aria-describedby="basic-addon3">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon3">Primera Dirección</span>
                                </div>
                                <input type="text" step=".01" class="form-control" value="{{tienda.primera_direccion}}" name="primera_direccion" aria-describedby="basic-addon3">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon3">Segunda Dirección</span>
                                </div>
                                <input type="text" step=".01" class="form-control" value="{{tienda.segunda_direccion}}" name="segunda_direccion" aria-describedby="basic-addon3">
                            </div>
                        </div>
                        <div class="form-group">
                            <h4>Lectura de producto:</h4>
                        </div>
                        <div class="form-group">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon3">Método lectura:</span>
                                </div>
                                <input list="lectura" class="form-control float-left" name="tipo_lectura" value="">
                            <datalist id="lectura" >
                                <option value="Código Barras"/>
                                <option value="Título producto"/>
                            </datalist>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon3">Tipo de factura:</span>
                                </div>
                                <input list="factura" class="form-control float-left" name="tipo_factura" value="">
                            <datalist id="factura" >
                                <option value="Impresora factura"/>
                                <option value="Impresora hoja A4"/>
                            </datalist>
                            </div>
                        </div>
                        <div class="float-right">
                            <button class="btn btn-success btn-block">Guardar</button>
                        </div>
                    </form>
        </div>
      </div>
    </div>
  </div>
</div>